<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<FlowPane alignment="CENTER" hgap="10.0" prefHeight="187.0" prefWidth="449.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GuessingGameController">
   <children>
      <Label prefHeight="36.0" prefWidth="185.0" text="Guessing Game" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
      </Label>
      <Label text="I'm thinking of a number between 1 and 100">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label text="Your Guess : ">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <TextField fx:id="input" onAction="#guessHandler" />
      <FlowPane alignment="CENTER" hgap="10.0" prefHeight="41.0" prefWidth="398.0">
         <children>
            <Label text="Hint :">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label fx:id="hint" textFill="RED">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
      </FlowPane>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</FlowPane>
